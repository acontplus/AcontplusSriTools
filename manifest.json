{
  "manifest_version": 3,
  "name": "Acontplus SRI Tools v1.4.1-Final",
  "version": "1.4.1",
  "description": "Extractor de Comprobantes Electronicos del SRI para Acontplus S.A.S. - Interfaz optimizada con tecnicas robustas de paginacion",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.sri.gob.ec/*",
    "*://comprobantes-electronicos-internet/*",
    "*://srienlinea.sri.gob.ec/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.sri.gob.ec/*",
        "*://comprobantes-electronicos-internet/*",
        "*://srienlinea.sri.gob.ec/*"
      ],
      "js": ["src/shared/utils.js", "src/content/pagination.js", "src/content/downloader.js", "src/content/extractor.js", "src/content/index.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Acontplus SRI Tools v1.4.1 - Final"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html", "libs/*", "content.js"],
      "matches": ["*://*.sri.gob.ec/*", "*://comprobantes-electronicos-internet/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com;"
  }
}