{
  "manifest_version": 3,
  "name": "Acontplus SRI Tools",
  "version": "1.4.1",
  "description": "Extractor de Comprobantes Electronicos del SRI para Acontplus S.A.S. - Interfaz optimizada con tecnicas robustas de paginacion",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "downloads.open"
  ],
  "host_permissions": [
    "*://*.sri.gob.ec/*",
    "*://comprobantes-electronicos-internet/*",
    "*://srienlinea.sri.gob.ec/*",
    "*://*.supabase.co/*",
    "*://*.supabase.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.sri.gob.ec/*",
        "*://comprobantes-electronicos-internet/*",
        "*://srienlinea.sri.gob.ec/*"
      ],
      "js": ["src/shared/utils.js", "src/services/supabase-config.js", "src/services/download-counter.js", "src/content/pagination.js", "src/content/downloader.js", "src/content/extractor.js", "src/content/index.js", "src/services/feedback-modal.js", "src/services/feedback-integration.js"],
      "css": ["assets/css/content.css", "assets/css/feedback-modal.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "action": {
    "default_title": "Acontplus SRI Tools"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup/popup.html",
        "src/*",
        "assets/css/*",
        "assets/js/*",
        "assets/fonts/*",
        ".env.sri-tool-extension"
      ],
      "matches": [
        "*://*.sri.gob.ec/*",
        "*://comprobantes-electronicos-internet/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self'; style-src 'self' 'unsafe-inline'; frame-src https://www.youtube.com; connect-src https://dxtiskspbikjpyrpeast.supabase.co https://*.supabase.co wss://*.supabase.co https://www.youtube.com https://*.googlevideo.com;"
  }
}